.othermodel .img {
  width: 100%;
  height: 300rpx;
}
.othermodel .img image {
  width: 100%;
  height: 100%;
}
.tabs {
  margin-bottom: 20rpx;
  background: #fff;
}

.tabs .tab {
  white-space: nowrap;
}

.tabs .tab .title {
  color: #000;
  margin: 0 40rpx;
  display: inline-block;
}

.tabs .tab .active {
  font-weight: bold;
  color: #E54D42;
}

.tabs .tab .active::after {
  /*伪元素 */
  content: "";
  display: block;
  margin: 0 auto;
  padding-bottom: 20rpx;
  width: 50rpx;
  border-bottom: 6rpx solid #E54D42;
}