.content {
  background: #e1e1e1;
  /* height: 100%; */
  height: calc(100vh - 150rpx);
}

.grid {
  display: flex;
  /* margin-top: 80rpx; */
  flex-wrap: wrap;
  box-sizing: border-box;
  padding: 0 30rpx;
}

.grid-item {
  width: 30%;
  height: 300rpx;
  margin-bottom: 80rpx;
  margin-right: 30rpx;
}
.grid-item .item-img {
  height: 100%;
} 
.grid-item image{
  width: 100%;
  height: 100%;
}
.grid-item:nth-of-type(3n) {
  margin-right: 0;
}
.grid-item .title {
  text-align: center;
  margin-top: 12rpx;
}