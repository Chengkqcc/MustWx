              <van-button class="edit" square color="#ccc">编辑</van-button>
              <van-button class="del" square color="#E54D42">删除</van-button>
            </view>
          </van-swipe-cell>
        </view>
        <view class="{{active==0?'no-have p':'no-have'}}">~没有了</view>
      </scroll-view>
      <scroll-view class="tab-content" wx:else="{{active==0}}" scroll-y>
      </scroll-view>
    </view>
  </view>
  <view class="model-btns" wx:if="{{active==0||active==2}}">
    <van-button plain color="#E54D42">朴素按钮</van-button>
    <van-button color="#E54D42">新建空白合同</van-button>
  </view>
</view>
