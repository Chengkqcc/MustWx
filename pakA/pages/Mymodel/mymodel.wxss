.model .model-btns {
  position: fixed;
  height: 150rpx;
  line-height: 150rpx;
  background: #fff;
  bottom: 0;
  display: flex;
  width: 100%;
  justify-content: space-around;
}

.model-box {
  padding: 30rpx;
  width: 600rpx;
  height: 450rpx;
  background-color: #fff;
  box-shadow: 10px 10px 10px 10px rgba(255, 255, 255, .5);
}
.model-box .title {
  display: flex;
  justify-content: space-between;
}
.model-box .model-content {
  text-align: center;
  margin: 120rpx 0;
}
.model-box .model-btns {
  display: flex;
  justify-content: center;
}
.model-box .model-btns .van-button {
  width: 240rpx;
  height: 80rpx;
  margin: 0 20rpx;
}

.model-box .model-btns .btn {
  border: 0;
  background: #eee;
}