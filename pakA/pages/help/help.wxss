.container {
  width: 100vw;
  height: 100%;
  background-color: #f1f1f1;
  box-sizing: border-box;
}
.container .help-con {
  position: fixed;
  left: 0;
  top: 10vh;
  width: 100%;
  height: 90vh;
  box-sizing: border-box;
  padding-bottom: 174rpx;
  background-color: #f1f1f1;
}
.container .help-con .advertisement {
  margin: 32rpx 32rpx 0rpx;
  box-sizing: border-box;
}
.container .help-con .advertisement image {
  width: 100%;
  height: 220rpx;
  border-radius: 6rpx;
}
.container .help-con .help-list {
  margin: 0 32rpx 6rpx;
}
.container .help-con .help-list .help-item .help-item-title {
  height: 90rpx;
  box-sizing: border-box;
  padding-top: 38rpx;
  font-size: 24rpx;
  font-weight: bold;
  display: flex;
  justify-content: space-between;
}
.container .help-con .help-list .help-item .help-item-title .text-more {
  font-size: 28rpx;
  font-weight: 100;
}
.container .help-con .help-list .help-item .van-cell-group {
  border-radius: 10rpx;
  overflow: hidden;
}
.container .help-con .help-list .lookMore {
  height: 128rpx;
  line-height: 128rpx;
  text-align: center;
  font-size: 24rpx;
  margin-top: 24rpx;
}
.container .footer {
  position: fixed;
  bottom: 0px;
  left: 0;
  width: 100%;
  height: 174rpx;
  background-color: #f1f1f1;
  z-index: 9;
  box-sizing: border-box;
  padding: 10rpx 32rpx 20rpx;
}
.container .footer .tab {
  width: 100%;
  height: 140rpx;
  background-color: #fff;
  border-radius: 10rpx;
  display: flex;
}
.container .footer .tab .tab-item {
  display: flex;
  flex-direction: column;
  flex: 1;
  text-align: center;
  justify-content: center;
}
.container .footer .tab .tab-item text {
  margin-top: 10rpx;
}
