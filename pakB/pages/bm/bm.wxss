.bm-container {
  background: #F1F1F1;
  width: 100vw;
  height: 100vh;
}
.btm {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 30rpx;
  padding-bottom: 28rpx;
  display: flex;
  background: #F7F7F7;
  justify-content: space-between;
}
.btm .join {
  width: 138px;
  height: 40px;
  margin-right: 40rpx;
}
.btm .add {
  flex: 1;
  height: 40px;
  width: 187px;
}
.hasCompanies {
  padding-top: 30rpx;
}
.hasCompanies .van-cell {
  display: flex;
  align-items: center;
}
.hasCompanies .van-cell .left {
  display: flex;
  align-items: center;
}
.hasCompanies .van-cell .left .image {
  width: 80rpx;
  height: 80rpx;
  background: #ccc;
  border-radius: 10rpx;
  margin-right: 20rpx;
}
.hasCompanies .van-cell .left .title {
  font-size: 34rpx;
  font-weight: 400;
}
.hasCompanies .van-cell .left .desc {
  font-size: 30rpx;
  font-weight: 300;
}
