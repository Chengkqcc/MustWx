page {
  background-color: #F1F1F1;
}
.mine .user {
  background-color: #fff;
  height: 88px;
  padding: 0 15px;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.mine .user .yonghu {
  display: flex;
  align-items: center;
}
.mine .user .yonghu .img {
  width: 58px;
  height: 58px;
  margin-right: 15px;
  border-radius: 5px;
}
.mine .user .yonghu .img image {
  width: 100%;
  height: 100%;
}
.mine .user .yonghu .text {
  height: 50px;
}
.mine .user .yonghu .text .h1 {
  font-size: 16px;
  color: #000;
  white-space: 4px;
  margin-bottom: 6px;
}
.mine .user .yonghu .text .p {
  font-size: 12px;
  color: #ccc;
}
.mine .user .qiehuan {
  padding: 10px 15px;
  font-size: 14px;
  border: 1px solid #000;
  border-radius: 3px;
}
.mine .user .qiehuan .img {
  width: 58px;
  height: 58px;
  margin-right: 15px;
  border-radius: 5px;
}
.mine .user .qiehuan .img image {
  width: 100%;
  height: 100%;
}
.mine .user .qiehuan .text {
  height: 50px;
}
.mine .user .qiehuan .text .h1 {
  font-size: 16px;
  color: #000;
  white-space: 4px;
  margin-bottom: 6px;
}
.mine .user .qiehuan .text .p {
  font-size: 12px;
  color: #ccc;
}
.mine .user .content {
  padding: 15px 15px 0;
}
.mine .user .content .cont {
  width: 100%;
  height: 52px;
}
.mine .user .content .cont image {
  width: 100%;
  height: 100%;
}
.mine .user .content .common {
  background-color: #fff;
  margin-top: 15px;
  border-radius: 10px;
  overflow: hidden;
  padding-top: 15px;
}
.mine .user .content .common .title {
  padding-left: 15px;
  font-size: 14px;
  color: #000;
}
.mine .user .content .fixed {
  width: calc(100vw - 30px);
  position: fixed;
  bottom: 60px;
  background-color: rgba(4, 140, 213, 0.8);
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: 15px;
  color: #fff;
  box-sizing: border-box;
  font-size: 14px;
}
.mine .user .qiehuan .title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15px;
  background-color: #F1F1F1;
}
.mine .user .qiehuan .title .text {
  font-weight: bolder;
}
.mine .user .qiehuan .item_user {
  padding: 15px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #F1F1F1;
}
.mine .user .qiehuan .item_user .user_item {
  display: flex;
}
.mine .user .qiehuan .item_user .user_item .img {
  width: 50px;
  height: 50px;
}
.mine .user .qiehuan .item_user .user_item .img image {
  width: 100%;
  height: 100%;
}
.mine .user .qiehuan .item_user .user_item .yonghu {
  margin-left: 10px;
}
.mine .user .qiehuan .item_user .user_item .yonghu .name {
  display: flex;
  align-items: center;
}
.mine .user .qiehuan .item_user .user_item .yonghu .name .state {
  padding: 5px 10px;
  background-color: #F37B1D;
  color: #fff;
  font-size: 14px;
  margin-left: 10px;
  border-radius: 3px;
}
.mine .user .qiehuan .item_user .user_item .yonghu .rzstate {
  font-size: 16px;
  color: #bbb;
}
