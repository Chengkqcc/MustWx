.eContract {
  padding-top: 20px;
}
.eContract .nav {
  width: 75%;
  box-sizing: border-box;
  padding: 0 15px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.eContract .nav .text {
  width: 160px;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.eContract .contractTop {
  background: #F6F6F6;
  padding: 30px;
}
.eContract .contractTop .title {
  font-size: 40px;
  color: #000;
  margin-bottom: 20px;
}
.eContract .contractTop .text {
  font-size: 12px;
  color: #333;
  line-height: 25px;
}
.eContract .contractTop .btn {
  margin-top: 15px;
}
.eContract .contractTop .btn button {
  height: 35px;
}
.eContract .content .contentTop {
  display: flex;
  justify-content: space-between;
}
.eContract .content .contentTop .item {
  width: 20%;
  height: 52px;
  color: #222;
  font-size: 14px;
  display: flex;
  justify-content: center;
  align-items: center;
  cursor: pointer;
}
.eContract .content .contentTop .item.active {
  color: #e61717;
  border-bottom: 2px solid #e61717;
}
.eContract .content .contentMain .introduce {
  padding: 20px;
}
.eContract .content .contentMain .introduce .top .title {
  padding: 25px 0 15px 0;
  color: #333;
  font-size: 30px;
  font-weight: 700;
  text-align: center;
}
.eContract .content .contentMain .introduce .top .text {
  padding: 0 5px;
  color: #646464;
  text-align: center;
  line-height: 25px;
}
.eContract .content .contentMain .introduce .content {
  display: flex;
  flex-wrap: wrap;
}
.eContract .content .contentMain .introduce .content .item {
  margin-top: 55px;
  display: flex;
}
.eContract .content .contentMain .introduce .content .item image {
  width: 60px;
  height: 60px;
  padding-top: 12px;
}
.eContract .content .contentMain .introduce .content .item .right {
  box-sizing: border-box;
  width: 75%;
  padding-left: 25px;
}
.eContract .content .contentMain .introduce .content .item .right .title {
  font-size: 20px;
  color: #333;
  margin-bottom: 15px;
}
.eContract .content .contentMain .introduce .content .item .right .text {
  font-size: 14px;
  color: #777;
  line-height: 30px;
}
.eContract .content .contentMain .serve {
  background: #F7F7F7;
  padding: 30px 25px 0;
}
.eContract .content .contentMain .serve .top .title {
  font-size: 30px;
  color: #333;
  font-weight: 700;
  text-align: center;
  padding: 15px 0;
}
.eContract .content .contentMain .serve .top .text {
  color: #646464;
  text-align: center;
  line-height: 26px;
}
.eContract .content .contentMain .serve .content .item {
  padding: 45px 15px;
  margin-top: 40px;
  background: #fff;
  color: #333;
  text-align: center;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}
.eContract .content .contentMain .serve .content .item image {
  width: 60px;
  height: 60px;
}
.eContract .content .contentMain .serve .content .item .title {
  width: 100%;
  font-size: 20px;
  padding: 15px 0;
}
.eContract .content .contentMain .serve .content .item .text {
  font-size: 14px;
  line-height: 20px;
}
.eContract .content .contentMain .serve .btn {
  padding: 40px 0;
  display: flex;
  justify-content: center;
}
.eContract .content .contentMain .serve .btn view {
  width: 55%;
}
.eContract .content .contentMain .scene {
  box-sizing: border-box;
  padding: 0 15px;
}
.eContract .content .contentMain .scene .top {
  text-align: center;
  padding: 35px 10px 15px;
}
.eContract .content .contentMain .scene .top .title {
  color: #333;
  font-size: 30px;
  font-weight: 700;
  margin-bottom: 15px;
}
.eContract .content .contentMain .scene .top .text {
  color: #646464;
  font-size: 14.5px;
  line-height: 22px;
}
.eContract .content .contentMain .scene .content .item {
  margin-bottom: 30px;
  position: relative;
}
.eContract .content .contentMain .scene .content .item image {
  width: 100%;
  height: 200px;
}
.eContract .content .contentMain .scene .content .item .shade {
  width: 100%;
  height: 200px;
  font-size: 24px;
  color: #222;
  background: rgba(0, 0, 0, 0.2);
  position: absolute;
  top: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}
.eContract .content .contentMain .scene .content .item .shade .title::after {
  content: "";
  display: block;
  width: 45%;
  height: 3px;
  background: #E61717;
  margin: 15px auto;
}
.eContract .content .contentMain .case {
  background: #F7F7F7;
}
.eContract .content .contentMain .case .top {
  box-sizing: border-box;
  padding: 35px 15px;
  background: #F7F7F7;
  text-align: center;
}
.eContract .content .contentMain .case .top .title {
  color: #333;
  font-size: 30px;
  font-weight: 700;
  margin-bottom: 15px;
}
.eContract .content .contentMain .case .top .text {
  font-size: 15px;
  padding: 0 10px;
  color: #646464;
}
.eContract .content .contentMain .case .content {
  box-sizing: border-box;
  padding: 0 15px;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.eContract .content .contentMain .case .content .item {
  box-sizing: border-box;
  width: 30%;
  background: #fff;
  padding: 6px 15px;
  margin-bottom: 30px;
}
.eContract .content .contentMain .case .content .item image {
  width: 100%;
  height: 40px;
}
.eContract .content .contentMain .question .top {
  padding: 35px 15px;
  text-align: center;
}
.eContract .content .contentMain .question .top .title {
  font-size: 30px;
  color: #333;
  font-weight: 700;
  margin-bottom: 15px;
}
.eContract .content .contentMain .question .top .text {
  color: #646464;
  font-size: 14.2px;
  line-height: 25px;
}
