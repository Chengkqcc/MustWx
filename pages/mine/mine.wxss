page {
  background-color: #F1F1F1;
}
.mine .user {
  background-color: #fff;
  height: 88px;
  padding: 0 15px;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}
.mine .user .img {
  width: 58px;
  height: 58px;
  margin-right: 15px;
  border-radius: 5px;
}
.mine .user .img image {
  width: 100%;
  height: 100%;
}
.mine .user .text {
  height: 50px;
}
.mine .user .text .h1 {
  font-size: 16px;
  color: #000;
  white-space: 4px;
  margin-bottom: 6px;
}
.mine .user .text .p {
  font-size: 12px;
  color: #ccc;
}
.mine .content {
  padding: 15px 15px 0;
}
.mine .content .cont {
  width: 100%;
  height: 52px;
}
.mine .content .cont image {
  width: 100%;
  height: 100%;
}
.mine .content .common {
  background-color: #fff;
  margin-top: 15px;
  border-radius: 10px;
  overflow: hidden;
  padding-top: 15px;
}
.mine .content .common .title {
  padding-left: 15px;
  font-size: 14px;
  color: #000;
}
