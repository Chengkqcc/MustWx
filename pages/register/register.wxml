<!--pages/register/register.wxml-->
<view class="register">
     <form>
        <view>
            <label>手机号/邮箱</label>
            <input type="text" placeholder="请输入您的手机号或邮箱"/>
        </view>
        <view>
            <label>密码</label>
            <input type="text" placeholder="请输入您的登录密码"/>
        </view>
    </form>
    <view class="notice">
        <van-checkbox value="{{ checked }}" bind:change="onChange"></van-checkbox>
        <text>我已阅读并同意</text>
        <p>《注册与使用协议》</p>
        <p>《隐私协议》</p>
        <p>《数字证书申领协议》</p>
    </view>
    <van-button color="#E54D42"  block>现在注册</van-button>
</view>
