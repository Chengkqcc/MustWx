        </view>
              
          
    </view>
    <view class="choose_item marginb">
        <view class="item_left">
            <view class="item_l green">
                <image class="" src="https://h5.1dq.com/static/upload_ico/tpl.png" />
            </view>
            <view class="item_m">
                <text class="tit">选择手机文件</text>
