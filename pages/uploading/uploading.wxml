            <view class="item_l yellow">
                <image class="" src="https://h5.1dq.com/static/upload_ico/Word.png" />
            </view>
            <view class="item_m">
                <text class="tit">选择手机文件</text>
                <text class="tips">使用手机文件签署</text>
            </view>
        </view>
          
        
        <view class="item_r">
