.resetPassword {
  box-sizing: border-box;
  padding: 30px 15px 15px;
}
.resetPassword .nav {
  margin-bottom: 40px;
  display: flex;
}
.resetPassword .nav .text {
  flex: 1;
  text-align: center;
}
.resetPassword .form view label {
  display: block;
  font-size: 14px;
  margin-bottom: 15px;
}
.resetPassword .form view input {
  padding-bottom: 10px;
  border-bottom: 1px solid #cecece;
}
.resetPassword .form view .pwdInput {
  display: flex;
  position: relative;
}
.resetPassword .form view .pwdInput input {
  width: 100%;
}
.resetPassword .form view .pwdInput .icon {
  position: absolute;
  top: 0;
  bottom: 0;
  right: 0;
  margin: 0 auto;
  z-index: 999;
}
.resetPassword .form view:first-child {
  margin-bottom: 25px;
}
.resetPassword .btn {
  margin-top: 45px;
}
.resetPassword .btn button {
  border-radius: 5px;
  font-size: 15px;
}
.resetPassword .demo {
  margin-top: 10px;
  display: flex;
  justify-content: center;
}
.resetPassword .demo view {
  width: 38%;
  height: 30px;
  background: #575757;
  color: #fff;
  font-size: 13px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.resetPassword .pwdProp {
  width: 80%;
  box-shadow: 4rpx 4rpx 8rpx 4rpx rgba(0, 0, 0, 0.5);
  padding: 15px;
}
.resetPassword .pwdProp .title {
  display: flex;
}
.resetPassword .pwdProp .text {
  padding: 50px 0;
  text-align: center;
}
.resetPassword .pwdProp .btn {
  text-align: center;
  margin-top: 0;
  padding-bottom: 30px;
}
.resetPassword .pwdProp .btn button {
  width: 115px;
  height: 40px;
}
